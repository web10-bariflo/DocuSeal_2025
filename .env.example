# ------------------------------------
# Rails environment
# ------------------------------------
RAILS_ENV=production
FORCE_SSL=false

# ------------------------------------
# Database Configuration
# Replace HOST, USER, PASSWORD, DBNAME
# ------------------------------------
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=disable

# ------------------------------------
# Redis URL
# ------------------------------------
REDIS_URL=redis://localhost:6379/0

# ------------------------------------
# Rails Secret Key
# Generate with: rails secret
# ------------------------------------
SECRET_KEY_BASE=your_generated_secret_key_here



# When someone clones your repo:

# They run:

# cp .env.example .env


# Then edit .env with their database & Redis values.
# Your app will run normally.